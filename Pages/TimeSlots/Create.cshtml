@page
@model WebApplication1.Pages.TimeSlots.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TimeSlot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            @Html.Label("Course")
            <select asp-for="TimeSlot.CourseId" asp-items="@(Model.CoursesListItems)">
                <option>Please select one</option>
            </select>

            @Html.Label("User")
            <select asp-for="TimeSlot.UserId" asp-items="@(Model.UsersListItems)">
                <option>Please select one</option>
            </select>

            <div class="form-group">
                <label asp-for="TimeSlot.StartTime" class="control-label"></label>
                <input asp-for="TimeSlot.StartTime" class="form-control" />
                <span asp-validation-for="TimeSlot.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
